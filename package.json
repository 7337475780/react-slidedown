{
  "name": "react-slidein",
  "version": "1.0.1",
  "description": "Component for animating height during mount/unmount using a CSS transition",
  "main": "lib/slidein.js",
  "style": "lib/slidein.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc ./lib/slidein.jsx -module commonjs -allowJs -removeComments -jsx react",
    "build-example": "tsc -p ./example && rollup -c ./example/rollup.config.js",
    "start-example": "live-server --open=./example",
    "start": "npm run build-example && npm run start-example"
  },
  "author": "Frank Wallis",
  "license": "MIT",
  "devDependencies": {
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "react-addons-transition-group": "^15.4.2"
  },
  "files": ["lib/slidein.js", "lib/slidein.css"],
  "keywords": [
    "react",
    "animation",
    "transition",
    "mount",
    "height",
    "auto",
    "dynamic",
    "css",
    "slide"
  ]
}
